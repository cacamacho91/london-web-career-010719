<h2>Create a car</h2>
<%= form_for(@car) do |f| %>
    <%= f.label :owner_id %>
    <%= f.collection_select :owner_id, Owner.all, :id, :name %>
    <%= f.label :mechanic_id %>
    <%= f.collection_select :mechanic_id, Mechanic.all, :id, :name %>
    <%= f.label :brand_id %>
    <input list="brand-names" id="brand-choice" name="brand_name" />

    <datalist id="brand-names">
        <% Brand.all.each do |brand| %>
            <option value="<%= brand.name %>">
        <% end %>
    </datalist>

    <%= f.submit %>
<% end %>